<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="6dp"
                android:gravity="center_vertical|left"
                android:text="旋转角度"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/main_angle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/main_angle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="0" />

                <RadioButton
                    android:id="@+id/main_angle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="270" />

                <RadioButton
                    android:id="@+id/main_angle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="180" />

                <RadioButton
                    android:id="@+id/main_angle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="6dp"
                android:gravity="center_vertical|left"
                android:text="画面比例"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/main_scale"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/main_scale1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="自动" />

                <RadioButton
                    android:id="@+id/main_scale2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原始" />

                <RadioButton
                    android:id="@+id/main_scale3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全屏" />

                <RadioButton
                    android:id="@+id/main_scale4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1:1" />

                <RadioButton
                    android:id="@+id/main_scale5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4:3" />

                <RadioButton
                    android:id="@+id/main_scale6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5:4" />

                <RadioButton
                    android:id="@+id/main_scale7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:9" />

                <RadioButton
                    android:id="@+id/main_scale8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:10" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="6dp"
                android:gravity="center_vertical|left"
                android:text="渲染类型"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/main_render"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/main_render_surfaceview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="true"
                    android:text="surfaceview" />

                <RadioButton
                    android:id="@+id/main_render_textureview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="textureview" />

                <RadioButton
                    android:id="@+id/main_render_glsurfaceview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="glsurfaceview[不稳定]" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="6dp"
                android:gravity="center_vertical|left"
                android:text="内核类型"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/main_kernel_group"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="6dp"
                android:gravity="center_vertical|left"
                android:text="解码类型"
                android:textSize="14sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/main_decoder"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                </RadioGroup>

            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="6dp"
                android:gravity="center_vertical|left"
                android:text="起播参数"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/main_seek"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/main_log_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="日志" />

                <CheckBox
                    android:id="@+id/main_seek_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="起播快进" />

                <CheckBox
                    android:id="@+id/main_trysee_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="试看" />

                <CheckBox
                    android:id="@+id/main_play_when_ready_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="true"
                    android:text="立即播放" />

                <CheckBox
                    android:id="@+id/main_play_when_looping_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:checked="true"
                    android:text="循环播放" />

                <CheckBox
                    android:id="@+id/main_play_when_delayed_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="延迟播放" />

                <CheckBox
                    android:id="@+id/main_cache_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="边播边缓存" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="6dp"
                android:gravity="center_vertical|left"
                android:text="默认url"
                android:textSize="14sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fillViewport="true">

                <RadioGroup
                    android:id="@+id/main_urls"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                </RadioGroup>

            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="6dp"
                android:gravity="center_vertical|left"
                android:text="自定义url"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/main_edit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="输入视频地址" />

            <Button
                android:id="@+id/main_button1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="播放" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>