<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false">

    <RelativeLayout
        android:id="@+id/module_mediaplayer_component_prepare_gradient_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:visibility="gone">

        <!-- 背景 -->
        <ImageView
            android:id="@+id/module_mediaplayer_component_prepare_gradient_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/module_mediaplayer_color_aa000000"
            android:focusable="false" />

        <!-- 转圈 -->
        <lib.kalu.mediaplayer.widget.gradient.GradientView
            android:id="@+id/module_mediaplayer_component_prepare_gradient_pb"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            app:gv_background_color_center="@color/module_mediaplayer_color_ff5a07"
            app:gv_background_color_end="@color/module_mediaplayer_color_aaff5a07"
            app:gv_background_color_start="@color/module_mediaplayer_color_aaff5a07"
            app:gv_light_color="@color/module_mediaplayer_color_aaffffff" />

        <!-- 名称 -->
        <TextView
            android:id="@+id/module_mediaplayer_component_prepare_gradient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/module_mediaplayer_component_prepare_gradient_pb"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:focusable="false"
            android:textColor="@color/module_mediaplayer_color_ffffff"
            android:textSize="30sp" />

        <!-- 网速 -->
        <TextView
            android:id="@+id/module_mediaplayer_component_prepare_gradient_net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/module_mediaplayer_component_prepare_gradient_pb"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:focusable="false"
            android:textColor="@color/module_mediaplayer_color_ffffff"
            android:textSize="14sp" />

    </RelativeLayout>


</RelativeLayout>
