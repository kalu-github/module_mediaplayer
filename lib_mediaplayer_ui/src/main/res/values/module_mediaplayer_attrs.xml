<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MPLoadingView">
        <attr name="lv_radius" format="dimension|reference" />
        <attr name="lv_rate" format="float|reference" />
        <attr name="lv_count" format="integer" />
        <attr name="lv_color_background" format="color|reference" />
        <attr name="lv_color_round" format="color|reference" />
        <attr name="lv_delay_millis" format="integer" />
    </declare-styleable>

    <declare-styleable name="GradientView">
        <attr name="gv_background_color_start" format="color|reference" />
        <attr name="gv_background_color_end" format="color|reference" />
        <attr name="gv_background_color_center" format="color|reference" />
        <attr name="gv_light_color" format="color|reference" />
        <attr name="gv_anim_duration" format="integer" />
    </declare-styleable>


    <declare-styleable name="SeekBar">
        <attr name="sb_text_progress_padding_left" format="dimension|reference" />
        <attr name="sb_text_progress_padding_right" format="dimension|reference" />
        <attr name="sb_text_duration_padding_left" format="dimension|reference" />
        <attr name="sb_text_duration_padding_right" format="dimension|reference" />
        <attr name="sb_text_size" format="dimension|reference" />
        <attr name="sb_text_color" format="color|reference" />
        <attr name="sb_text_gravity" format="enum">
            <enum name="top" value="1" />
            <enum name="center" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <attr name="sb_mode" format="enum">
            <enum name="open" value="1" />
            <enum name="close" value="2" />
        </attr>
    </declare-styleable>


    <declare-styleable name="PopuView">
        <attr name="pv_corners" format="reference|dimension" />
        <attr name="pv_margin_bottom" format="reference|dimension" />
        <attr name="pv_background_color" format="reference|color" />
    </declare-styleable>

</resources>